{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "react-app",
        "plugin:jsx-a11y/recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
      "settings": {
        "import/resolver": {
          "node": {
            "paths": ["src"]
          }
        }
      },
    "rules": {
        "no-unused-vars": "error",
        "import/order": [
          "error",
          {
            "groups": ["builtin", "external", "internal"],
            "pathGroups": [
              {
                "pattern": "react",
                "group": "external",
                "position": "before"
              }
            ],
            "pathGroupsExcludedImportTypes": ["react"],
            "newlines-between": "always"
          }
        ]
    }
}